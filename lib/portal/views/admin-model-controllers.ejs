function <%=model.controllers.retrieve%>($scope, <%=model.name%>) 
{
  $scope.<%=model.collection%> = <%=model.name%>.query();
}

function <%=model.controllers.create%>($scope, $location, <%=model.name%>)
{
  $scope.<%=model.name%> = <%-JSON.stringify(instance)%>;

  $scope.create = function() 
  {
    <%=model.name%>.create($scope.<%=model.name%>, function(<%=model.name%>){
      $location.path('/<%=model.collection%>');
    });
  };

  $scope.push = function(array, object) 
  {
    array.push(object);
  }

  $scope.pop = function(array, index) 
  {
    array.splice(index, 1);
  }
}

