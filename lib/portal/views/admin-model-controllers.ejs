function <%=model.controllers.retrieve%>($scope, <%=model.name%>) 
{
  $scope.<%=model.collection%> = <%=model.name%>.query();
}

function <%=model.controllers.create%>($scope, $location, <%=model.name%>)
{
  $scope.<%=model.name%> = new <%=model.name%>(<%-JSON.stringify(instance)%>);

  $scope.create = function() 
  {
    $scope.<%=model.name%>.create(function(){
      $location.path('/<%=model.collection%>');
    });
  };

  $scope.push = function(array, object) 
  {
    array.push(object);
  }

  $scope.pop = function(array, index) 
  {
    array.splice(index, 1);
  }
}

function <%=model.controllers.update%>($scope, $location, $routeParams, <%=model.name%>)
{
  var self = this;
  <%=model.name%>.get({id: $routeParams.id}, function(<%=model.name%>){
    self.<%=model.name%> = <%=model.name%>;
    $scope.<%=model.name%> = new <%=model.name%>(self.<%=model.name%>);
  });

  $scope.update = function() 
  {
    <%=model.name%>.create($scope.<%=model.name%>, function(<%=model.name%>){
      $location.path('/<%=model.collection%>');
    });
  };

  $scope.push = function(array, object) 
  {
    array.push(object);
  }

  $scope.pop = function(array, index) 
  {
    array.splice(index, 1);
  }
}