function <%=model.controllers.retrieve%>($scope, Restangular) 
{
  $scope.<%=model.collection%> = Restangular.all('<%=model.collection%>').getList();;
}

function <%=model.controllers.create%>($scope, $location, Restangular)
{
  $scope.<%=model.name%> = Restangular.copy(<%-JSON.stringify(instance)%>);

  $scope.create = function() 
  {
    Restangular.all('<%=model.collection%>').custom<%=createVerb%>('', {}, {}, $scope.<%=model.name%>).then(function(<%=model.name%>) {
      $location.path('/<%=model.collection%>');
    });
  };

  $scope.push = function(array, object) 
  {
    array.push(object);
  }

  $scope.pop = function(array, index) 
  {
    array.splice(index, 1);
  }
}

function <%=model.controllers.update%>($scope, $location, $routeParams, Restangular)
{
  var self = this;

  Restangular.one('<%=model.collection%>', $routeParams.id).get().then(function(<%=model.name%>) {
    self.original = <%=model.name%>;
    $scope.<%=model.name%> = Restangular.copy(self.original);
  });

  $scope.push = function(path, object) 
  {
  }

  $scope.pop = function(path) 
  {
  }

  $scope.set = function(path, data) 
  {
  }
}